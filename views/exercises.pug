extends layout 

block main
  table
    thead 
      tr 
        th(scope="col") 
        th(scope="col") Exercises
        th(scope="col") Sets
        th(scope="col") Reps
    tbody 
      each exercise, index in exerciseGroup.exercises 
        tr
          th(scope="row") #{index + 1}
          td #{exercise.exercise_name}
          td #{exercise.sets}
          td #{exercise.reps}
  
  form(action=`/groups/${exerciseGroup.id}/create`, method="post")
    dl 
      dt 
        label(for="") Exercise Name
      dd 
        input(type="text")